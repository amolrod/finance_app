{
  "name": "personal-finance-app",
  "version": "0.1.0",
  "private": true,
  "description": "Personal Finance Application - Expense tracking and investment portfolio management",
  "author": "Finance App Team",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:cov": "turbo run test:cov",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:migrate": "bun run --filter @finance/api migrate",
    "db:generate": "bun run --filter @finance/api db:generate",
    "db:seed": "bun run --filter @finance/api db:seed",
    "db:studio": "bun run --filter @finance/api db:studio",
    "clean": "turbo run clean && rm -rf node_modules bun.lockb",
    "typecheck": "turbo run typecheck",
    "type-check": "turbo run typecheck"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "trustedDependencies": [
    "prisma",
    "@prisma/client",
    "argon2"
  ],
  "packageManager": "bun@1.1.0",
  "dependencies": {
    "@nestjs/schedule": "^6.1.0"
  }
}
